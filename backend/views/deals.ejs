<%- include('partials/header', { title: 'GADGET - Hot Deals' }) %>

<div class="container">
    <h1 class="page-title">Hot Deals</h1>
    <p class="page-subtitle">Limited-time offers on your favorite gadgets</p>

    <div class="deals-container">
        <% deals.forEach(deal => { %>
            <div class="deal-card">
                <div class="deal-badge"><%= deal.discount %></div>
                <div class="deal-image-container">
                    <img src="<%= deal.image %>" alt="<%= deal.name %>" class="deal-image">
                </div>
                <div class="deal-details">
                    <h3><%= deal.name %></h3>
                    <div class="price-container">
                        <span class="original-price">$<%= deal.originalPrice.toFixed(2) %></span>
                        <span class="deal-price">$<%= deal.dealPrice.toFixed(2) %></span>
                    </div>
                    <p class="expiry">Offer ends: <%= new Date(deal.expiry).toLocaleDateString() %></p>
                    <button class="add-to-cart" data-id="<%= deal.id %>" 
                            data-name="<%= deal.name %>" 
                            data-price="<%= deal.dealPrice %>"
                            data-image="<%= deal.image %>">
                        Add to Cart
                    </button>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('partials/footer') %>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-title {
        text-align: center;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .page-subtitle {
        text-align: center;
        margin-bottom: 2rem;
        color: #666;
    }

    .deals-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .deal-card {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s;
        position: relative;
    }

    .deal-card:hover {
        transform: translateY(-5px);
    }

    .deal-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #f1c40f;
        color: white;
        padding: 0.3rem 0.6rem;
        border-radius: 4px;
        font-weight: bold;
        z-index: 1;
    }

    .deal-image-container {
        height: 200px;
        overflow: hidden;
    }

    .deal-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .deal-card:hover .deal-image {
        transform: scale(1.05);
    }

    .deal-details {
        padding: 1.5rem;
    }

    .deal-details h3 {
        margin-top: 0;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .price-container {
        margin: 1rem 0;
    }

    .original-price {
        text-decoration: line-through;
        color: #999;
        margin-right: 0.5rem;
    }

    .deal-price {
        font-weight: bold;
        color: #e74c3c;
        font-size: 1.2rem;
    }

    .expiry {
        color: #666;
        font-size: 0.9rem;
        margin: 0.5rem 0;
    }

    .add-to-cart {
        background: #f1c40f;
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        width: 100%;
        transition: background 0.3s;
    }

    .add-to-cart:hover {
        background: #f39c12;
    }

    @media (max-width: 768px) {
        .deals-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    document.querySelectorAll('.add-to-cart').forEach(button => {
        button.addEventListener('click', async function() {
            const product = {
                productId: this.dataset.id,
                name: this.dataset.name,
                price: parseFloat(this.dataset.price),
                image: this.dataset.image
            };

            try {
                const response = await fetch('/add-to-cart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(product)
                });

                if (response.ok) {
                    const result = await response.json();
                    if (result.success) {
                        // Update cart count in navigation
                        const cartCountElements = document.querySelectorAll('.cart-count');
                        cartCountElements.forEach(el => {
                            el.textContent = result.cartCount;
                        });
                        
                        // Show temporary success feedback
                        const originalText = this.textContent;
                        this.textContent = 'âœ“ Added to Cart';
                        this.style.backgroundColor = '#2ecc71';
                        
                        setTimeout(() => {
                            this.textContent = originalText;
                            this.style.backgroundColor = '#f1c40f';
                        }, 2000);
                    }
                }
            } catch (error) {
                console.error('Error:', error);
            }
        });
    });
</script>