<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            color: #333;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #111;
            padding: 15px 20px;
            color: white;
        }
        .navbar .logo {
            font-size: 24px;
            font-weight: bold;
        }
        .navbar nav a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-size: 18px;
        }
        .sign-in {
            background-color: #f1c40f;
            padding: 10px 20px;
            border-radius: 5px;
            color: black;
            font-weight: bold;
            text-decoration: none;
        }

        .product-section {
            text-align: center;
            padding: 30px;
        }

        .product-list {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
        }

        .product-card {
            background-color: white;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            flex: 1 1 250px;
            max-width: 300px;
        }

        .product-card img {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            border-radius: 5px;
        }

        .product-card h3 {
            font-size: 18px;
            margin-top: 10px;
        }

        .discount {
            text-decoration: line-through;
            color: red;
            font-size: 14px;
        }

        .add-to-cart {
            background-color: #f1c40f;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
            margin-top: 10px;
        }

        footer {
            text-align: center;
            padding: 15px;
            background-color: #111;
            color: white;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <header>
        <div class="navbar">
            <h1 class="logo">GADGET</h1>
            <nav>
                <a href="/">Home</a>
                <a href="/wishlist">Wishlist</a>
                <a href="/results">Deals</a>
                <a href="#">Contact Us</a>
            </nav>
            <a href="/login" class="sign-in">Sign In</a>
        </div>
    </header>

    <main>
        <section class="product-section">
            <h2>Laptops</h2>
            <div class="product-list">
                <% let laptops = [
                    { name: 'Dell XPS 13', price: 999, originalPrice: 1199, image: 'https://i.pinimg.com/736x/39/2a/c4/392ac4f4ccc8d69573fcd692ecde61a5.jpg' },
                    { name: 'MacBook Air', price: 1099, originalPrice: 1299, image: 'https://via.placeholder.com/300' },
                    { name: 'HP Spectre x360', price: 1249, originalPrice: 1499, image: 'https://via.placeholder.com/300' },
                    { name: 'Lenovo ThinkPad X1', price: 1399, originalPrice: 1599, image: 'https://via.placeholder.com/300' }
                ]; %>

                <% laptops.forEach(laptop => { %>
                    <div class="product-card">
                        <img src="<%= laptop.image %>" alt="<%= laptop.name %>">
                        <h3><%= laptop.name %></h3>
                        <p>$<%= laptop.price %> <span class="discount">$<%= laptop.originalPrice %></span></p>
                        <button class="add-to-cart">Buy Now</button>
                    </div>
                <% }); %>
            </div>
        </section>

        <section class="product-section">
            <h2>Mobiles</h2>
            <div class="product-list">
                <% let mobiles = [
                    { name: 'iPhone 14 Pro', price: 1099, originalPrice: 1299, image: 'https://via.placeholder.com/300' },
                    { name: 'Samsung Galaxy S23', price: 999, originalPrice: 1199, image: 'https://via.placeholder.com/300' },
                    { name: 'OnePlus 11', price: 749, originalPrice: 899, image: 'https://via.placeholder.com/300' },
                    { name: 'Google Pixel 7 Pro', price: 899, originalPrice: 1099, image: 'https://via.placeholder.com/300' }
                ]; %>

                <% mobiles.forEach(mobile => { %>
                    <div class="product-card">
                        <img src="<%= mobile.image %>" alt="<%= mobile.name %>">
                        <h3><%= mobile.name %></h3>
                        <p>$<%= mobile.price %> <span class="discount">$<%= mobile.originalPrice %></span></p>
                        <button class="add-to-cart">Buy Now</button>
                    </div>
                <% }); %>
            </div>
        </section>

        <section class="product-section">
            <h2>Earbuds</h2>
            <div class="product-list">
                <% let earbuds = [
                    { name: 'Apple AirPods Pro', price: 249, originalPrice: 299, image: 'https://via.placeholder.com/300' },
                    { name: 'Samsung Galaxy Buds2', price: 149, originalPrice: 199, image: 'https://via.placeholder.com/300' },
                    { name: 'Sony WF-1000XM4', price: 279, originalPrice: 329, image: 'https://via.placeholder.com/300' },
                    { name: 'Bose QuietComfort Earbuds', price: 199, originalPrice: 249, image: 'https://via.placeholder.com/300' }
                ]; %>

                <% earbuds.forEach(earbud => { %>
                    <div class="product-card">
                        <img src="<%= earbud.image %>" alt="<%= earbud.name %>">
                        <h3><%= earbud.name %></h3>
                        <p>$<%= earbud.price %> <span class="discount">$<%= earbud.originalPrice %></span></p>
                        <button class="add-to-cart">Buy Now</button>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2025 Gadget Tracker. All rights reserved.</p>
    </footer>
</body>
</html>
